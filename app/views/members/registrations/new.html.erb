<div class="login" style="color:#fff; text-align: center; font-size: 20px;">
<h2>Sign up</h2>

<%= form_with model: @member, url: member_registration_path, local: true do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

 <div class="actions">
  <button type="submit" start="border: none; outline: none;  background: transparent;" style="color:#fff;" onclick="loction.href='/profiles'" >
  NEXT<i class="fas fa-sign-in-alt faa-passing animated-hover fa-lg"></i>
  </button>

<%= render "members/shared/error_messages", resource: resource %>
<%= render "members/shared/links" %>

<% end %>

</div>