<p><i class="far fa-comment"></i><%= @record.rec_comments.count %></p>
<% @record.rec_comments.each do |rec_comment| %>
  <div class="" style="margin-top:10px; display: flex;">
    <div class="cir_comment_member_image">
      <%= attachment_image_tag rec_comment.member, :image, size: '40x40', format: 'jpeg', fallback: "sample-author1.jpg", style:"background:#fff;",class:"rounded-circle" %>
    </div> 
    <div class="cir_comment">
      <%= rec_comment.comment %>
    </div>
  </div>
  <div class="" style="display: flex;">
    <div class="cir_comment_member_name">
      <%= rec_comment.member.name %>
    </div>
    <div class="cir_comment_time">
      <%= rec_comment.created_at.strftime('%Y/%m/%d') %><%= rec_comment.comment %>
    </div>
    
    <% if rec_comment.member == current_member %>
     <%= link_to record_rec_comment_path(rec_comment.record, rec_comment), method: :delete, remote: true, class: "circle_delete" do %>
        <i class="fas fa-eraser faa-passing animated-hover"></i>
      <% end %> 
    <% end %>
  </div>
<% end %>