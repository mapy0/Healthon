<div>


  <p>記録日：<%= @diary.date %></p>
  <p>タイトル：<%= @diary.title %></p>
  <p>本文：<%= @diary.body %></p>
  
    <% @diary.dia_images.each do |t| %>
    <!--Refile特有の記述↓-->
    <%= attachment_image_tag t, :image, size: "300x300", class: "diary_image rounded" %>
    <%#= image_tag t.image.to_s,width:300,height:300,class: "diary_image rounded" %>
  <% end %>

    <% if @diary.member == current_member %>
    <%= link_to "削除", diary_path(@diary), method: :delete %>
    <%= link_to "編集", edit_diary_path(@diary) %>
    <% end %>
</div>