<div class="sign_up" style="color:#fff; text-align: center; font-size: 20px;">
<h2>Member Infomation Edit</h2>
<%= form_with model:@member, local:true do |f| %>
  <%= attachment_image_tag @member, :image, size: '100x100', fallback: "sample-author1.jpg", style:"background-color:#fff;",class:"rounded-circle" %>
  <div class="aim_w_field"><br />
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>

  <div class="aim_bf_field">
  <%= f.text_area :self_introduction, autofocus: true, id:"inputIntroduction", placeholder:"紹介文を書いてみましょう"%>
  </div>
  
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>


  <%#= f.submit "変更を保存" %>
  <button type="submit", style="font-size:20px; color:#fff; margin:10px; margin-left:170px;">
  <i class="fas fa-file-signature faa-pulse animated-hover"></i>Edit</button>


<% end %>