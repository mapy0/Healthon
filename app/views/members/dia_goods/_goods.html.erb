 <div class="dia_goods">
 <% if @diary.gooded_by?(current_member) %>
    <p>
      <%= link_to diary_dia_goods_path(@diary), method: :delete, remote: true, style:"text-decoration: none;" do %>
        <i class="fas fa-thumbs-up" style="color:#426579;"></i> <%= @diary.dia_goods.count %> 
      <% end %>good
    </p>
  <% else %>
    <p>
      <%= link_to diary_dia_goods_path(@diary), method: :post, remote: true, style:"text-decoration: none;" do %>
        <i class="far fa-thumbs-up" style="color:#426579;"></i><%= @diary.dia_goods.count %> 
      <% end %>good
    </p>
  <% end %>
</div>