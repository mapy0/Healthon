<h1>Record</h1>

<div class="row">
<div class="col-sm6">
<%= form_with model: @record, url: member_records_path, local:true do |f| %>

  <h4>測定日</h4>
  <%= f.datetime_field :date %>
  <h4>体重</h4>
  <%= f.text_field :weight %>
  <h4>BMI</h4>
  <%= f.text_field :bmi %>
  <h4>体脂肪率</h4>
  <%= f.text_field :bf %>
  <h4>筋肉量</h4>
  <%= f.text_field :mm %>
  <h4>筋肉率</h4>
  <%= f.text_field :mus %>
  <h4>骨格筋率</h4>
  <%= f.text_field :sm %>
  </div>

 <div class="col-sm6">
  <div class="parent">
    <div class="form-box">
      <div class="forms-item">
        食事
      </div>
      <!-- １）追加ボタンの記述 -->
      <div class="add-botton-box">
        <%= link_to_add_association "追加ボタン", f, :meals,
        class: 'add_fields',
        id: 'add-btn',
        data: {
          association_insertion_node: '#detail-association-insertion-point',
          association_insertion_method: 'after'
          }
        %>
      </div>
    </div>

    <div id="detail-association-insertion-point"></div>

    <%= f.fields_for :meals do |form| %>
      <%= render "meal_fields", f: form %>
    <% end %>
  </div>
  </div>

   <%= f.attachment_field :rec_images_images, multiple: true %>

  <%= f.submit '記録' %>

<% end %>

</div>

