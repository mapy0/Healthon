<div class="nested-fields">

       <% current_date = Date.current %>
       <div class="field">
         <%= f.text_field :name, class: "workouts-name", id: "workouts-name", size: 30 %>
       </div>

      <div class="field">
         <%= f.text_field :burned_calorie, class: "burned_calorie", id: "workouts-burned_calorie", size: 4 %>　kcal
      </div>

      <!--hidden_fieldは削除して、日付の入力をさせる?-->
      <%= f.hidden_field :date, value: current_date %>
        <span class="box-unit" id='unit-auto' data-unit='0'></span>

        <%= link_to_remove_association "削除", f %>

</div>