<div class="nested-fields">
      <!--td class="td-fixed-select">

        <!-- 選択ボックス(プルダウン)の箇所 -->
        <%# my_meal_options = MyMeal.order(:id).map { |c| [c.thing, c.id, data: { unit: c.unit, spoon:c.spoon }] } %>
        <%#= f.select(:my_meal_id, my_meal_options, { prompt: "---"}, {class:"select", data:{select:0}, id:"my_meal-select" }) %>

      <!--/td-->

       <% current_date = Date.current %>
       <div class="field">
         <%= f.text_field :name, class: "meals-name", id: "meals-name", size: 30 %>
       </div>

      <div class="field">
         <%#= f.number_field :amount, class:"ingredients-amount",id:"ingredient-amount", min:"0",step:"0.1"%>
         <%= f.text_field :calorie, class: "meals-calorie", id: "meals-calorie", size: 4 %>　kcal
      </div>

      <div class="field">
        <%= f.time_field :time %>
      </div>

      <!--hidden_fieldは削除して、日付の入力をさせる-->
      <%= f.hidden_field :date, value: current_date %>
        <span class="box-unit" id='unit-auto' data-unit='0'></span>

        <%= link_to_remove_association "削除", f %>

</div>